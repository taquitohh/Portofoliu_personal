<style>
  .contact {
    padding: 6rem 2rem;
    background: var(--bg-primary);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .title-number {
    font-family: 'Fira Code', monospace;
    font-size: 1.2rem;
    color: var(--primary);
  }

  .section-title::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--primary) 0%, transparent 100%);
    margin-left: 1rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-text h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .contact-text > p {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--bg-card);
    border-radius: var(--radius-sm);
    transition: var(--transition);
    cursor: pointer;
  }

  .contact-item:hover {
    transform: translateX(10px);
    background: var(--bg-secondary);
  }

  .contact-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-secondary);
    border-radius: var(--radius-sm);
    color: var(--primary);
  }

  .contact-item:hover .contact-icon {
    background: var(--primary);
    color: white;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
  }

  .contact-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .contact-value {
    color: var(--text-primary);
    font-weight: 500;
  }

  .cta-card {
    background: var(--bg-card);
    border-radius: var(--radius);
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
    height: fit-content;
  }

  .cta-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 150px;
    height: 150px;
    background: var(--gradient-1);
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
  }

  .cta-card h4 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    position: relative;
  }

  .cta-card p {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .btn-contact {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--gradient-1);
    color: white;
    border-radius: var(--radius-sm);
    font-weight: 600;
    transition: var(--transition);
    position: relative;
  }

  .btn-contact:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(124, 58, 237, 0.4);
  }

  .footer {
    padding: 2rem;
    background: var(--bg-secondary);
    text-align: center;
    border-top: 1px solid var(--bg-card);
  }

  .footer p {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .footer strong {
    color: var(--primary-light);
  }

  .footer-year {
    margin-top: 0.5rem;
    font-size: 0.85rem;
  }

  @media (max-width: 868px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
